# File name: GUI.py
#: kivy 1.11.1

<-ScaleButton@Button>:
	state_image: self.background_normal if self.state == 'normal' else self.background_down
	disabled_image: self.background_disabled_normal if self.state == 'normal' else self.background_disabled_down
	_scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
	canvas:
		Color:
			rgba: self.background_color
		BorderImage:
			border: self.border
			pos: self.pos
			size: self.size
			source: self.disabled_image if self.disabled else self.state_image
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
		Color:
			rgba: self.disabled_color if self.disabled else self.color
		Rectangle:
			texture: self.texture
			size: self.texture_size
			pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)
		PopMatrix

<MyFloat>:
	# creating canvas 
    canvas: 
        Color: 
            rgba: 0, 0, 1, 1    # Blue 
  
        # size and position of Canvas 
        Rectangle: 
            pos: (200,200) 
            size: (50,50)

        Color: 
            rgba: 1, 0, 0, 1    # Blue 
  
        # size and position of Canvas 
        Rectangle: 
            pos: (100,100) 
            size: (50,50)

	Label:			 
		text:"Welcome to FB Automation tools"
		size_hint: 0.2,0.1
		pos_hint: {"x":0.4,"y":0.5}
	

	ScaleButton:
		id: post_file
		text:"Select Post File"
		padding: dp(12), dp(12)
		font_size: self.height * 0.5 
		color: 0, 255, 255, 1
		size_hint: 0.2,0.1
		pos_hint:{"x":0.2,"y":0.0}
		on_release: root.open_post_file(self)

	ScaleButton:
		id: detail_file
		text:"Select Detail File"
		padding: dp(12), dp(12)
		font_size: self.height * 0.5 
		color: 0, 255, 255, 1
		size_hint: 0.2,0.1
		pos_hint:{"x":0.4,"y":0.0}
		on_release: root.open_detail_file(self)

	ScaleButton:
		id: detail_file
		text:"Publish Post"
		padding: dp(12), dp(12)
		font_size: self.height * 0.5 
		color: 0, 255, 255, 1
		size_hint: 0.2,0.1
		pos_hint:{"x":0.6,"y":0.0}
		on_release: root.publish_post(self)

	