# File name: GUI.py
#: kivy 1.11.1
#: import utils kivy.utils

<-ScaleButton@Button>:
	state_image: self.background_normal if self.state == 'normal' else self.background_down
	disabled_image: self.background_disabled_normal if self.state == 'normal' else self.background_disabled_down
	_scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
	canvas:
		Color:
			rgba: utils.get_color_from_hex("#4267B2")
		RoundedRectangle:			
			pos: self.pos
			size: self.size
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
		Color:
			rgba: (1,1,1,1)
		RoundedRectangle:
			texture: self.texture
			size: self.texture_size
			pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)
		PopMatrix

<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<MyFloat>:
	canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
	ScrollView:
        size_hint: 1.0, 0.76
        pos_hint: {'center_y':0.5}
        bar_width: 10
        scroll_type: ['bars', 'content']

        BoxLayout:
            id: testing
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: 10
            
            canvas:
                Color:
                    rgba: (1, 1, 1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            	        
    BoxLayout:
        id: header
        size_hint: 1, 0.1        
        pos_hint: {'top':1.0}                                
        
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#4267B2")
            Rectangle:
                size: self.size
                pos: self.pos
		FloatLayout:                
        	Label:
            	text: 'FB Post Scheduler'
            	font_size:'24dp'
            	size_hint_x: 2
            	pos_hint: {'center_x': .5, 'center_y': .6}

            	bold: True
            	color: (1,1,1,1)
    
    BoxLayout:
        size_hint_y: None
        pos_hint: {'top':0.93} 
        height: 30
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#898F9C")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'No.'
            size_hint_x: .1
        Label:
            text: 'Page Name'
            size_hint_x: .2
        Label:
            text: 'Post ID'
            size_hint_x: .2        
        Label:
            text: 'Date & Time'
            size_hint_x: .2
        Label:
            text: 'Status'
            size_hint_x: .2    
                   


	BoxLayout:
		pos_hint: {'y':0}
		size_hint: 1, 0.12
		padding: 10,10,10,10
		spacing:10

		ScaleButton:
			id: post_file
			text:"Select Post File"
			padding: dp(12), dp(12)
			font_size: self.height * 0.4 
			color: (1, 1, 1, 1)
			size_hint: 0.2,1
			
			on_press: root.open_post_file(self)

		ScaleButton:
			id: detail_file
			text:"Select Details File"
			padding: dp(12), dp(12)
			font_size: self.height * 0.4 
			color: (1, 1, 1, 1)
			size_hint: 0.2,1
			
			on_release: root.open_detail_file(self)

		ScaleButton:
			id: detail_file
			text:"Schedule Post"
			padding: dp(12), dp(12)
			font_size: self.height * 0.4 
			color: 1, 1, 1, 1
			size_hint: 0.2,1
			
			on_release: root.start_new_thread(self)



	